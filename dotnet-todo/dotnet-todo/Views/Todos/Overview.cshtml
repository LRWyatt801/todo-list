@model List<dotnet_todo.Models.Todos>
@{
}
<h1>Todos Overview</h1>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Is Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.Description</td>
                <td>@(todo.IsCompleted ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@todo.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@todo.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
